<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    tools:context=".login.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/join_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="회원가입"
            android:textAlignment="center"
            android:fontFamily="@font/suiteextrabold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/blabla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="블라블라블라"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/verification_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/magenta70"
                    android:fontFamily="@font/suiteextrabold"
                    android:text="본  인  인  증"
                    android:textColor="@color/white"
                    android:textSize="23sp" />

                <EditText
                    android:id="@+id/join_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_shape"
                    android:ems="10"
                    android:fontFamily="@font/suitebold"
                    android:hint="성명"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/join_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_shape"
                    android:ems="10"
                    android:fontFamily="@font/suitebold"
                    android:hint="아이디"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/join_regist_numr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_shape"
                    android:ems="10"
                    android:fontFamily="@font/suitebold"
                    android:hint="주민번호"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/join_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_shape"
                    android:ems="10"
                    android:fontFamily="@font/suitebold"
                    android:hint="이메일"
                    android:inputType="textEmailAddress"
                    android:minHeight="35dp"
                    android:padding="10dp"
                    tools:ignore="Autofill" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/join_phone_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_shape"
                        android:ems="10"
                        android:fontFamily="@font/suitebold"
                        android:hint="전화번호"
                        android:inputType="phone"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <Button
                        android:id="@+id/sendNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:backgroundTint="@color/magenta70"
                        android:fontFamily="@font/suiteextrabold"
                        android:text="번호 전송"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/certi_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_shape"
                        android:ems="10"
                        android:fontFamily="@font/suitebold"
                        android:hint="인증번호"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <Button
                        android:id="@+id/checkNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:backgroundTint="@color/magenta70"
                        android:fontFamily="@font/suiteextrabold"
                        android:text="인증 확인"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/join_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_shape"
                    android:ems="10"
                    android:fontFamily="@font/suitebold"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/join_pwCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_shape"
                    android:ems="10"
                    android:fontFamily="@font/suitebold"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <Button
                android:id="@+id/join_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/magenta70"
                android:fontFamily="@font/suiteextrabold"
                android:text="회 원  가 입"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>